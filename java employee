class employee{
    String name,address;
    int phonenum,age;
    double salary;
    
    void printSalary(){
        System.out.println(salary+"\n");
        
    }
}
class officer extends employee{
    String specialization;
    officer(String name, String address, int phonenum, int age , int salary , String specialization){
        this.name=name;
        this.address=address;
        this.phonenum=phonenum;
        this.age=age;
        this.salary=salary;
        this.specialization=specialization;
    }
    void printOfficerDetails(){
        System.out.println("Name:"+name+"\n"+"address:"+address+"\n"+"Phonenumber:"+phonenum+"\n"+"age:"+age+"\n"+"specialization:"+specialization);
    }
}
class manager extends employee{
    String department;
    manager(String name, String address, int phonenum, int age , int salary,String department){
        this.name=name;
        this.address=address;
        this.phonenum=phonenum;
        this.age=age;
        this.salary=salary;
        this.department=department;
    }
    void printManagerDetails(){
           System.out.println("Name:"+name+"\n"+"address:"+address+"\n"+"Phonenumber:"+phonenum+"\n"+"age:"+age+"\n"+"Department:"+department);
    }
}

public class employeeinherit{
    public static void main (String[]args){
        officer officer_person = new officer("Lenin","pqrs",89008,20,2000,"R and D");
        manager manager_person= new manager("shibu","pqrs",89776,30,3000,"Devops");
        officer_person.printOfficerDetails();
        System.out.println("The salary of officer:");
        officer_person.printSalary();
        manager_person.printManagerDetails();
        System.out.println("The salary of manager:");
        manager_person.printSalary();
    }
}
